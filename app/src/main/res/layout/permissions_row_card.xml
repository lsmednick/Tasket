<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardBackgroundColor="@color/blue_2"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    tools:context=".AdjustPermissions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorOnPrimarySurface"
        android:gravity="start"
        android:orientation="vertical">

        <EditText
            android:id="@+id/permissions_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter permission name"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:textSize="18dp"
            tools:textColorHint="@color/teal_700" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/add_members_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="add members" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/remove_members_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="remove members" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/add_files_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="add files" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/delete_files_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="delete files" />

        <TextView
            android:id="@+id/members_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Members:"
            android:textSize="18sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/members_list_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/add_members_text_view_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:text="Click to add member"
            android:textColor="@color/teal_700" />

    </LinearLayout>
</androidx.cardview.widget.CardView>